generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  nome      String
  email     String    @unique
  senha     String
  histories History[] // Relação com a tabela History

  @@map("users") // Reflete o nome da tabela como 'users' no banco de dados
}

model History {
  id      Int    @id @default(autoincrement())
  entry   String
  userId  Int
  user    User   @relation(fields: [userId], references: [id]) // Relação com o modelo User
  createdAt DateTime @default(now()) // Adiciona um timestamp de criação
  
  @@map("histories") // Reflete o nome da tabela como 'histories' no banco de dados
}

model Mac {
  id         Int    @id @default(autoincrement())
  nome       String
  fabricante String
}
